@{
    Layout="~/views/shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
 @model List<Doctor>

<h2>Welcome to the Dashboard</h2>


 <h4>Doctors List</h4>
<a asp-controller="Dashboard" asp-action="AddDoctor" class="btn btn-primary">Add Doctors</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialization</th>
            <th>Qualification</th>
            <th>NMC Number</th>
            <th>Upade/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Specification</td>
                <td>@doctor.Qualification</td>
                <td>@doctor.NMC_Number</td>
                <td>
                    <a asp-controller="Dashboard" asp-action="UpdateDoctor" class="btn btn-primary">Update</a> &nbsp; <form asp-controller="Dashboard" asp-action="DeleteDoctor" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@doctor.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
